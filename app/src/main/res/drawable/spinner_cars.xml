<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <padding
                        android:left="14dp"
                        android:top="4dp"
                        android:right="14dp"
                        android:bottom="4dp"
                        />

                    <gradient android:startColor="#a9a9a9" android:endColor="#a9a9a9" android:angle="90" />
                    <stroke android:width="10px" android:color="#a9a9a9" />
                    <corners android:radius="5dp" />
                </shape>
            </item>

            <item>

                <bitmap android:gravity="center|right" android:src="@drawable/dropdown_blue"/>

            </item>

        </layer-list>
    </item>
</selector>